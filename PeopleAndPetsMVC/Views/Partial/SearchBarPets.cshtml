@*
    The search bar specifically for the main pets page.
*@

@model PeopleAndPetsMVC.Models.OwnersPetsViewModel

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Search", "Pets", FormMethod.Post))
        {
            <input type="hidden" name="OwnerId" value="@Model.OwnerId"/>
            <input type="hidden" name="OwnerName" value="@Model.OwnerName" />
            <div>
                <label>Type and click search to retrieve the pets via their names or types. To retrieve all, click on search while the search bar is empty</label>
            </div>
            <br />
            <div class="form-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Enter name to search">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Search</button>
        }
    </div>
</div>